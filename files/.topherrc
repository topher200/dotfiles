# Delete the current branch you're on, leaving you on a deteched HEAD
function gdcb {
    branch_name=`git symbolic-ref HEAD --short`
    current_rev=`git rev-parse HEAD`
    git checkout $current_rev
    git branch -D $branch_name
}
